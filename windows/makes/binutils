#!/bin/zsh

echo "Patching binutils..."
sh -c "cd binutils-${V_BINUTILS} && patch -p1 < ../../patches/binutils/129_multiarch_libpath.patch"

APPEND_TOOLLIBDIR=yes
export APPEND_TOOLLIBDIR

mkdir binutils-build
mkdir binutils-install
cd binutils-build
../binutils-${V_BINUTILS}/configure \
    --host=i686-w64-mingw32 \
    --prefix=/c/Users/Public/tx1 \
    --program-prefix=aarch64-tx1-linux-gnu- \
    --target=aarch64-linux-gnu \
    "--with-pkgversion=GNU Binutils for Jetson TX1 18.04" \
    --enable-poison-system-directories \
    --with-sysroot=/c/Users/Public/tx1/sys-root \
    --enable-plugins \
    --disable-nls \
    --enable-lto \
    --with-build-sysroot=/usr/local/tx1-toolchain/sys-root
make -j3
DESTDIR=$PWD/../binutils-install make install
cd ../binutils-install
