#!/bin/bash
source ../versions.sh

export CFLAGS="-g -O2"
export CPPFLAGS="-D_FORTIFY_SOURCE=2"
export CXXFLAGS="-g -O2"
export FFLAGS="-g -O2"
export LDFLAGS=""

export CFLAGS_FOR_TARGET="-g -O2 --param=ssp-buffer-size=4 -Wformat -Wformat-security"
# BUG: https://gcc.gnu.org/bugzilla/show_bug.cgi?id=61164
# so we just disable it
export CPPFLAGS_FOR_TARGET=""
export CXXFLAGS_FOR_TARGET="-g -O2 --param=ssp-buffer-size=4 -Wformat -Wformat-security"
export FFLAGS_FOR_TARGET="-g -O2"
export LDFLAGS_FOR_TARGET="-Wl,-Bsymbolic-functions -Wl,-z,relro"

echo "Extracting GCC..."
tar xf ../gcc-${V_GCC}.tar.gz
echo "Extracting MPFR..."
tar xf ../mpfr-${V_MPFR}.tar.bz2
echo "Extracting MPC..."
tar xf ../mpc-${V_MPC}.tar.gz
echo "Extracting GMP..."
tar xf ../gmp-${V_GMP}.tar.bz2
echo "Extracting CLOOG..."
tar xf ../cloog-${V_CLOOG}.tar.gz
echo "Extracting ISL..."
tar xf ../isl-${V_ISL}.tar.bz2
echo "Extracting GDB..."

echo "Patching GCC..."
sh -c "cd gcc-${V_GCC} && patch -p2 < ../../patches/gcc/g++-multiarch-incdir.diff"
patch -p0 < ../patches/gcc/config
patch -p0 < ../patches/gcc/ubsan.c

mv cloog-${V_CLOOG} gcc-${V_GCC}/cloog
mv isl-${V_ISL} gcc-${V_GCC}/isl
mv mpfr-${V_MPFR} gcc-${V_GCC}/mpfr
mv mpc-${V_MPC} gcc-${V_GCC}/mpc
mv gmp-${V_GMPf} gcc-${V_GCC}/gmp

export CC_FOR_TARGET=aarch64-nano1804-linux-gnu-gcc
export CXX_FOR_TARGET=aarch64-nano1804-linux-gnu-g++
export GCC_FOR_TARGET=aarch64-nano1804-linux-gnu-gcc
export AR_FOR_TARGET=aarch64-nano1804-linux-gnu-ar
export AS_FOR_TARGET=aarch64-nano1804-linux-gnu-as
export LD_FOR_TARGET=aarch64-nano1804-linux-gnu-ld
export NM_FOR_TARGET=aarch64-nano1804-linux-gnu-nm
export OBJCOPY_FOR_TARGET=aarch64-nano1804-linux-gnu-objcopy
export OBJDUMP_FOR_TARGET=aarch64-nano1804-linux-gnu-objdump
export RANLIB_FOR_TARGET=aarch64-nano1804-linux-gnu-ranlib
export READELF_FOR_TARGET=aarch64-nano1804-linux-gnu-readelf
export STRIP_FOR_TARGET=aarch64-nano1804-linux-gnu-strip

mkdir gcc-build
mkdir gcc-install
cd gcc-build
../gcc-${V_GCC}/configure \
    --host=i686-w64-mingw32 \
    --enable-threads=posix \
    --program-prefix=aarch64-nano1804-linux-gnu- \
    --target=aarch64-linux-gnu \
    --with-specs='%{save-temps: -fverbose-asm} %{funwind-tables|fno-unwind-tables|mabi=*|ffreestanding|nostdlib:;:-funwind-tables}' \
    --enable-languages=c,c++ \
    --with-default-libstdcxx-abi=new \
    --enable-libstdcxx-time=yes \
    --enable-shared \
    --enable-lto \
    --disable-nls \
    "--with-pkgversion=GCC for Jetson Nano 18.04" \
    --with-cloog \
    --enable-multilib \
    --enable-multiarch \
    --prefix=/c/Users/Public/nano1804 \
    --with-sysroot=/c/Users/Public/nano1804/sys-root \
    --disable-libmudflap \
    --with-build-sysroot=/usr/local/nano1804-toolchain/sys-root \
    --libdir=/c/Users/Public/nano1804/sys-root/usr/lib \
    --with-gxx-include-dir=/c/Users/Public/nano1804/sys-root/usr/include/c++/5.5.0 \
    || exit $?
make -j3 all-gcc || exit $?
DESTDIR=$PWD/../gcc-install make install-gcc || exit $?

cd ../gcc-install

